{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2020", "DOM"],
    "baseUrl": "./",
    "outDir": "./dist/server",
    "noUnusedLocals": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/cache/tsc.json",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": ["src/server/**/*"]
}
